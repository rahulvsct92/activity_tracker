<%= form_for(activity) do |f| %>
  <%= render "shared/error_messages", object: activity %>

  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :task %>
    <%= f.select :task_id, @assigned_tasks.map { |t| [t.name.humanize, t.id] } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
